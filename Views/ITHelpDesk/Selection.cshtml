<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ITHelpDesk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ITHelpDesk.styles.css" asp-append-version="true" />
    <style>
        /* Style to center the content in the middle of the page */
        .full-screen {
            display: flex;
            justify-content: center;
            align-items: flex-start; /* Align items to the top instead of center */
            height: 100vh;
            text-align: center;
            padding-top: 50px; /* Adjust the space from the top */
        }

        .container {
            width: 100%;
        }

        .row {
            display: flex;
            justify-content: center; /* Center the buttons */
            gap: 12px; /* Adjust the space between buttons */
            margin-top: 20px; /* Adjust space between the title and buttons */
        }

        .col-md-2 {
            padding: 0; /* Remove the padding */
            margin-bottom: 0; /* Remove space below each button */
        }

        h2 {
            margin-top: 40px;
            margin-bottom: 60px; /* Add space after the title */
        }

        /* Add space between the second and third rows */
        .new-row {
            margin-top: 25px; /* Add space above the Achievements button */
        }

        /* Style for the second row */
        .second-row {
            display: flex;
            justify-content: center;
            gap: 12px;
            margin-top: 20px;
        }

        /* Prevent the text from wrapping */
        .btn-nowrap {
            white-space: nowrap;
        }

        /* Hide the IT Stock sub-buttons by default */
        .it-stock-buttons {
            display: none;
            flex-direction: column;
            align-items: center;
            gap: 20px; /* Space between buttons */
        }

        /* Hide all other buttons by default */
        .other-buttons {
            display: flex;
        }

        /* Adjust col-md-12 to ensure full width for centering */
        .col-md-12 {
            width: 100%;
            max-width: 300px; /* Optional: Limit button width for better appearance */
            padding: 0;
        }

        /* Apply the nowrap property to all buttons */
        .btn {
            white-space: nowrap;
        }
    </style>
</head>
<body>
    <div class="full-screen">
        <div class="container">
            @if (TempData["WelcomeMessage"] != null)
            {
                <div class="alert alert-success">
                    <strong>@TempData["WelcomeMessage"]</strong>
                </div>
            }

            <h2>Please select the category!</h2>

            <!-- Other Buttons (Queries, Risk Points, Achievements, etc.) -->
            <div class="row other-buttons" id="otherButtons">
                <div class="col-md-2">
                    <a href="@Url.Action("CreateQuery", "Query")" class="btn btn-primary btn-lg btn-block btn-nowrap">Queries</a>
                </div>
                @{
                    string USR_NAME = Context.Session.GetString("USR_NAME");
                    var allowedUsers = new List<string> { "4357", "1078", "3961", "4762", "3936", "4654", "4999", "1042", "1830", "1831", "2560" };
                    if (!string.IsNullOrEmpty(USR_NAME) && allowedUsers.Contains(USR_NAME))
                    {
                        <div class="row second-row">
                            <div class="col-md-2">
                                <a href="@Url.Action("QueriesList", "Query")" class="btn btn-info btn-lg btn-block btn-nowrap">Queries List</a>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("CreateRiskPoint", "RiskPoints")" class="btn btn-warning btn-lg btn-block btn-nowrap">Risk Points</a>
                            </div>
                            <div class="col-md-2">
                                <a href="@Url.Action("AchievementsOverRiskPoints", "RiskPoints")" class="btn btn-warning btn-lg btn-block btn-nowrap">Achievements / Risk Points</a>
                            </div>
                        </div>

                        <div class="row new-row">
                            <div class="col-md-2">
                                <a href="@Url.Action("CreateAchievement", "Achievement")" class="btn btn-success btn-lg btn-block btn-nowrap">Achievements</a>
                            </div>
                            <div class="col-md-2">
                                <a href="javascript:void(0);" id="itStockBtn" class="btn btn-success btn-lg btn-block btn-nowrap">IT Stock</a>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- IT Stock sub-buttons -->
            <div class="row it-stock-buttons" id="itStockSubButtons">
                <div class="col-md-2">
                    <a href="javascript:void(0);" id="transactionalBtn" class="btn btn-info btn-lg btn-block btn-nowrap">Transactional</a>
                </div>
                <div class="col-md-2">
                    <a href="javascript:void(0);" id="definitionsBtn" class="btn btn-info btn-lg btn-block btn-nowrap">Definitions</a>
                </div>
                <div class="col-md-2">
                    <a href="javascript:void(0);" id="reportsBtn" class="btn btn-info btn-lg btn-block btn-nowrap">Reports</a>
                </div>
            </div>

            <!-- Transactional sub-buttons (Create Transaction Received & Issuance) -->
            <div class="row it-stock-buttons" id="transactionalSubButtons" style="display:none;">
                <div class="col-md-2">
                    <a href="@Url.Action("CreateTransaction", "Transaction")" class="btn btn-primary btn-lg btn-block btn-nowrap">Create Transaction (Received)</a>
                </div>
                <div class="col-md-2">
                    <a href="@Url.Action("CreateTransactionIssuance", "Transaction")" class="btn btn-primary btn-lg btn-block btn-nowrap">Create Transaction (Issuance)</a>
                </div>
            </div>

            <!-- Definitions sub-buttons -->
            <div class="row it-stock-buttons" id="definitionsSubButtons" style="display:none;">
                <div class="col-md-10">
                    <a href="@Url.Action("CreateItem", "Item")" class="btn btn-info btn-lg btn-block btn-nowrap">Items List (Accessories & Main Hardware)</a>
                </div>
                <div class="col-md-12 second-row">
                    <a href="@Url.Action("CreateVendor", "Vendor")" class="btn btn-info btn-lg btn-block btn-nowrap">Vendors List</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // General function to toggle visibility of buttons
        function toggleSubButtons(buttonId, subButtonId) {
            var allSubButtons = document.querySelectorAll('.it-stock-buttons');
            var targetSubButton = document.getElementById(subButtonId);

            // Hide all sub-buttons first
            allSubButtons.forEach(function(subButton) {
                subButton.style.display = 'none';
            });

            // Show only the relevant sub-button
            targetSubButton.style.display = 'flex';
        }

        // When the "IT Stock" button is clicked, show IT Stock sub-buttons and hide other buttons
        document.getElementById('itStockBtn')?.addEventListener('click', function() {
            document.getElementById('otherButtons').style.display = 'none'; // Hide other buttons
            toggleSubButtons('itStockBtn', 'itStockSubButtons');
        });

        // When the "Transactional" button is clicked, show the Transactional sub-buttons and hide others
        document.getElementById('transactionalBtn')?.addEventListener('click', function() {
            toggleSubButtons('transactionalBtn', 'transactionalSubButtons');
        });

        // Event listener for the Definitions button to show Definitions sub-buttons
        document.getElementById('definitionsBtn')?.addEventListener('click', function() {
            toggleSubButtons('definitionsBtn', 'definitionsSubButtons');
        });

        // Event listener for the Reports button to show Reports sub-buttons
        document.getElementById('reportsBtn')?.addEventListener('click', function() {
            toggleSubButtons('reportsBtn', 'reportsSubButtons');
        });
    </script>

</body>
</html>

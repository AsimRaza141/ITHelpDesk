@model ITHelpDesk_Updated.Models.StockReportViewModel

@{
    ViewData["Title"] = "Stock Ledger";
}

<div class="container">
    <h2 style="margin-top: 0; text-align: center; color: #00008B; font-weight: bold">@ViewData["Title"]</h2>

    <!-- Stock Report Form -->
    <form asp-action="CreateStockReport" method="post" id="stockReportForm">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group" style="margin-bottom: 15px;">
            <label for="SelectedTransactionCriteria" style="font-weight: bold;">Transaction Criteria</label>
            <select asp-for="SelectedTransactionCriteria" class="form-control" id="transactionCriteriaSelect" asp-items="@Model.TransactionCriteriaList" onchange="this.form.submit()">
                <option value="">--Select Transaction Criteria--</option>
            </select>
            <span asp-validation-for="SelectedTransactionCriteria" class="text-danger"></span>
        </div>
    </form>

    <!-- Generate Report Button -->
    @if (Model.StockRecords != null && Model.StockRecords.Any())
    {
        <form asp-action="GenerateReport" method="post" class="text-center mt-3">
            <input type="hidden" name="SelectedTransactionCriteria" value="@Model.SelectedTransactionCriteria" />
            <button type="submit" class="btn btn-primary" style="padding: 10px 20px; font-size: 16px; background-color: orangered;">Generate Report</button>
        </form>
    }

    <hr />

    <!-- Stock Records Table -->
    <h3 class="text-center" style="margin-top: 20px; font-weight: bold; color: #00008B;">Stock Records</h3>
    <div id="responsive-table" style="margin-top: 20px;">
        <table class="table table-bordered table-striped" id="stockTable" style="width: 100%; text-align: center; border: 1px solid #000;">
            <thead class="bg-info text-white">
                <tr>
                    <th style="font-weight: bold; color: #00008B;">Transaction Code</th>
                    <th style="font-weight: bold; color: #00008B;">Item Name</th>
                    <th style="font-weight: bold; color: #00008B;">Stock-In</th>
                    <th style="font-weight: bold; color: #00008B;">Stock-Out</th>
                    <th style="font-weight: bold; color: #00008B;">Balance</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.StockRecords != null && Model.StockRecords.Any())
                {
                    @foreach (var record in Model.StockRecords)
                    {
                        <tr>
                            <td>@record.TransactionCode</td>
                            <td>@record.ItemName</td>
                            <td>@record.ReceivedQuantity</td>
                            <td>@record.IssuedQuantity</td>
                            <td>@record.Stock</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align: center; color: gray;">No records available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
